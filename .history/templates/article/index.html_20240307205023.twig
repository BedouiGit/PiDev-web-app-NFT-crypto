{% extends 'basefront.html.twig' %}




{% block title %}Our articles {% endblock %}

{% block content %}
    <h1>Articles</h1>

     <form action="{{ path('app_article_index') }}" method="get">
        <input type="text" name="q" value="{{ app.request.query.get('q') }}" placeholder="Search...">
        <button type="submit">Search</button>
    </form>


<style>
    .pagination {
    text-align: center;
}

.pagination-list {
    display: inline-block;
    list-style: none;
    padding: 0;
}

.pagination-item {
    display: inline-block;
    margin-right: 5px;
}

.pagination-item a {
    padding: 5px 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
    text-decoration: none;
    color: #333;
}

.pagination-item.active a {
    background-color: #007bff;
    color: #fff;
    border-color: #007bff;
}

.pagination-item.disabled a {
    pointer-events: none;
    background-color: #f5f5f5;
    color: #aaa;
    border-color: #ddd;
}

</style>





    <style>
        .rn-blog-area .container {
            max-width: 100%;
        }

        .col-xl-12, .col-lg-12 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .news-details {
            max-width: 100%;
            width: 100%;
        }
    </style>

    {% for article in pagination %}
        <div class="rn-blog-area rn-blog-details-default rn-section-gapTop">
            <div class="container">
                <div class="row g-6">
                    <div class="col-xl-12 col-lg-12">
                        <div class="rn-blog-listen">
                            <div class="blog-content-top">
                                <h2 class="title">{{ article.titre }}</h2>
                            
                                <div class="tagcloud">
                                    {% if article.tags.count > 0 %}
                                    <div class="tags">
                                    {% for tag in article.tags %}
                                   <a href="{{ path('app_tag_front_show', {'id': tag.id}) }}">{{ tag.nom }}</a>
                                   {% endfor %}
                                    </div>
                                {% endif %}
                                </div>
                                <span class="date">{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</span>
                            </div>
                            <div class="bd-thumbnail">
                                <div class="large-img mb--30">

                            <img style="width: 300px; height: 300px;" src="{{asset('public/uploads/photos/'~ article.photo)}}" alt="Nft_Profile">
                                </div>
                            </div>
                            <div class="news-details">
                                {{ article.contenu }}
                            </div>
                           
                                <div class="comments-area">
                                    <div class="trydo-blog-comment">
                                        <h5 class="comment-title mb--40">
                                            <a href="{{ path('app_article_front_show', {'id': article.id}) }}">show</a>
    {% endfor %}

                        
                                        </h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Display pagination links -->
 <nav class="pagination-wrapper" aria-label="Page navigation example" data-sal="slide-up" data-sal-delay="550" data-sal-duration="800">
                          <li class="page-item"><a class="page-link active" href="#">    {{ knp_pagination_render(pagination) }}</a></li>
                          
                        </ul>
                    </nav>

  <div class="pagination">

</div>

    
{% endblock %}
