{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation', 'enctype': 'multipart/form-data'}}) }}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Create Collection</h6>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="photoURL" class="font-weight-bold">Logo image</label>
                        <div class="custom-file">
                            {{ form_widget(form.photoURL, {'id': 'photoURL', 'class': 'custom-file-input', 'aria-describedby': 'inputGroupFileAddon01'}) }}
                            <label class="custom-file-label" for="photoURL">Choose file</label>
                        </div>

                        <div class="mt-3">
                            <img id="uploadedImage" style="height: 200px; width: 200px; border: 1px solid #ccc; margin-bottom: 10px;" src="{{ asset('FrontOffice/assets/images/profile/profile-01.jpg') }}" alt="Profile-NFT">
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="name" class="font-weight-bold">Name</label>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="form-group">
                        <label for="description" class="font-weight-bold">Description</label>
                        {{ form_widget(form.Description, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.Description) }}
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="themeSwitch">
                            <label class="form-check-label" for="themeSwitch">Explicit & sensitive content</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}

<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#uploadedImage')
                    .attr('src', e.target.result);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
