<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <div class="text-center">
        <button type="submit" class="btn btn-danger" onsubmit="return confirm('Are you sure you want to delete this user? This action is irreversible.')">Delete User</button>
    </div>
</form>
